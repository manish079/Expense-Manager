<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_item_boder"
    android:orientation="horizontal"
    android:paddingLeft="5dp"
    android:layout_marginBottom="15dp"
    android:layout_marginTop="1dp"
    android:layout_marginLeft="1dp"
    android:layout_marginRight="1dp"
    android:paddingRight="5dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="10"
        android:orientation="vertical"
        android:paddingTop="7dp">


        <TextView
            android:id="@+id/tv_elDay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:paddingBottom="0dp"
            android:text="24"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_elMonth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxLines="1"
            android:paddingBottom="0dp"
            android:paddingTop="2dp"
            android:text="March"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_elYear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="0dp"
            android:text="2022"
            android:textColor="#605D5D"
            android:paddingTop="2dp"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_elPaidRs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="2dp"
            android:text="Paid Rs.2300"
            android:textColor="@color/light_green"
            android:textSize="10sp" />
    </LinearLayout>


    <View
        android:layout_width="3dp"
        android:layout_height="match_parent"
        android:background="@color/green" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_weight="30"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingTop="10dp"
        android:paddingRight="5dp"
        android:paddingBottom="25dp"

        >


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/tv_elName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Balaji Sweets"
                android:textColor="#433737"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_elCat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Bills &amp; Payments"
                android:textColor="#605D5D" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingRight="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Total"
                android:textColor="#605D5D"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_elTotalSpend"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="5dp"
                android:background="@drawable/main_activity_total"
                android:gravity="center"
                android:paddingStart="10dp"
                android:paddingTop="7dp"
                android:paddingEnd="10dp"
                android:paddingBottom="7dp"
                android:text="Rs. 2500"
                android:textColor="#605D5D"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_elDue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="Due Rs. 200"
                android:textColor="@color/red"
                android:textSize="10sp" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>



